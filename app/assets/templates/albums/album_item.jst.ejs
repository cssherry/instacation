<div class='thumbnail'>
  <a href="<%= '#users/' + album.escape('owner_id') + '/albums/' + album.id %>" >
    <h3 class='title'><%= album.escape('title') %></h3>
    <% if(photoUrl) { %>
      <img src="<%= photoUrl %>" alt="Photos in <%= album.escape('title') %>"/></a>
    <% } else { %>
      </a>
      <p><i>No Images in this Album</i></p>
    <% } %>

  <p class='location-name'>
    <% if (location) {%>
      <b><%= location.escape('name')%></b>
      <i><%= " (" + location.escape('state') + ", " + location.escape('country') + ")"%></i>
    <% } %>
  </p>

  <% if (editable) { %>
    <a href="#" class="btn btn-primary delete-album"> x </a>
    <a href='#' class='btn btn-primary edit-album' role="button"> edit </a>
    <div class='edit-album-form'>

    </div>
  <% } %>
</div>
