<form class='<%= photoView ? 'photo-update' : 'photo-create' %>'>
  <input type="text"
         name="photo[caption]"
         placeholder='Photo Caption'
         <% if(photoView) { %>
           value='<%= photoView.model.escape('caption') %>'
         <% } %> >
  <br>

  <a href='#' class='btn btn-primary choose-photo' role="button"> Click or Drag Photos Here </a>
  <div class='chosen-photos'>  </div>

  <input type="text"
         name="location"
         class="location-picker"
         <% if(locationPlaceholder) { %>
           placeholder='<%= locationPlaceholder.escape("name") %>'
         <% } else { %>
           placeholder="Add location tag"
         <% } %>
         <% if(location ) { %>
           value='<%= location.escape("name") %>'
         <% } %> >
  <br>

  <br>
  <button><%= photoView ? 'Edit Photo' : 'Create Photo' %></button>
</form>
