<h1><%= photo.escape('caption') %>
  <a href="<%= '#users/' +  userId + '/albums/' + photo.escape('album_id') %>" class="btn btn-primary">
    Back to album
  </a>
</h1>

<div class='photo'>
  <a href="<%= photo.escape('photo_url') %>">
    <img src="<%= photo.escape('photo_url') %>" alt="<%= photo.escape('caption') %>" />
  </a>
</div>
