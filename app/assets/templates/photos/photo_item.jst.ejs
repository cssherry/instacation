  <div class='thumbnail' >
    <a href="<%= '#users/' + userId + '/albums/' + photo.escape('album_id') + '/photos/' + photo.id %>" >
      <img src="<%= photo.escape('photo_url') %>" alt="<%= photo.escape('caption') %>" /><br>
    </a>

    <p class='caption' id='<%= photo.id %>'>
      <% if (photo.escape('caption')) { %>
        <%= photo.escape('caption') %>
      <% } %>
    </p>

    <% if (editable) { %>
      <a href="#" class="btn btn-primary delete-photo" role="button"> x </a>
      <a href='#' class='btn btn-primary edit-photo' role="button"> edit </a>

      <div class='edit-photo-form'>
      </div>

    <% } %>
  </div>
